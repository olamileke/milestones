<%- include('includes/loggedin-top.ejs') %>

<div class='pt-8 px-6' style='font-family:"Comfortaa"'>
	<div class='flex flex-row mb-3'>
		<div class='h-32 w-2/6 mr-3 p-4 border-color-005 border bg-white flex flex-row justify-between items-center rounded-lg'>
			<div class='flex flex-col'>
				<p class='m-0 mb-2 text-sm font-semibold'>Total Activities</p>
				<p class='text-lg ml-3 text-gray-600'><%= numActivities %></p>
			</div>
			<img src="/images/auth-index/activity.svg" width='80px' height='80px'>
		</div>
		<div class='w-4/6 px-8 py-4 border-color-005 border bg-white rounded-lg flex flex-row items-center'>
			<div class='w-4/6 flex flex-col'>
				<p class='m-0 mb-3 text-sm font-semibold'>Milestone Completion</p>
				<p class='text-gray-600'>10/14</p>
			</div>
			<div>
				<div class='rounded-full border-8 border-color-005 p-4 relative'>
					35%
					<div class='text-transparent absolute border-8 p-4 rounded-full border-gray-yellow' style='top:-7px;left:-9px'>
						50%
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='rounded-md'>
		<% actions.forEach(action => {  %>
			<% if(action.name == 'Create Activity') { %>
				<div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-2' style=', sans-serif; box-shadow:5px 5px 10px 2px rgba(0,0,0,0.2)'>
					<img src="<%= action.activity.imageUrl %>" class='rounded-md object-cover w-8 h-8 mr-3'>
					<div class='text-gray-700 mr-5 text-sm'>
						You created a new activity "<b><%= action.activity.name %></b>"
					</div>
					<p class='m-0 absolute top-0 mt-2 right-0 text-xs text-gray-600 mr-2 quicksand'><%= action.created_at %></p>
				</div>
			<% } %>
		<% }) %>
	</div>
</div>

<%- include('includes/loggedin-end.ejs') %>