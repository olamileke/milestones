<%- include('includes/loggedin-top.ejs') %>
<%- include('includes/date.ejs') %>

	<div class='px-6'>
		<div class='flex flex-row mb-3 p-6 rounded' style="background:#f2efea;">
			<div class='w-4/6 mr-6 flex flex-col'>
				<p class='m-0 mb-3 text-lg baloo-bhaina' style='color:#8E5572;'>Document the process as you enhance and better yourself</p>
				<p class='quicksand text-sm' style='color:#8E5572;'>
					Keep track of yourself and your growth journey as you go about the never ending process of improving
					yourself, your methods and your end products.
				</p>
			</div>
			<div class='2/6 text-right'>
				<img src="/images/auth-index/activity.svg" width="150px">
			</div>
		</div>
		<% if(actions.length > 0) { %>
			<div class='rounded-md quicksand'>
				<% actions.forEach(action => {  %>
					<% if(action.name == 'Create Activity') { %>
						<div class='bg-white rounded-md border border-color-005 flex flex-row items-center p-4 relative mb-2'>
							<img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-3'>
							<div class='text-gray-600 mr-5 mt-1' style='font-size:0.92rem;'>
								You created a new activity <a href='/activity/<%= action.activity._id %>'><%= action.activity.name %></a>
							</div>
							<p class='m-0 absolute top-0 mt-2 right-0 text-xs quicksand text-gray-600 mr-2'><%= getDateString(action.created_at) %></p>
						</div>
					<% } %>
					<% if(action.name == 'Create Milestone') { %>
						<div class='bg-white rounded-md border border-color-005 flex flex-row items-center p-4 relative mb-2'>
							<img src="<%= action.milestone.imageUrl %>" class='rounded object-cover w-8 h-8 mr-3'>
							<div class='text-gray-600 mr-5 mt-1' style='font-size:0.92rem;'>
								Milestone achieved in <a href='/activity/<%= action.milestone.activityId %>'><%= action.milestone.activityName %> </a>
							</div>
							<p class='m-0 absolute top-0 mt-2 right-0 text-xs quicksand text-gray-600 mr-2'><%= getDateString(action.created_at) %></p>
						</div>
					<% } %>
					<% if(action.name == 'Edit Activity') { %>
						<div class='bg-white rounded-md border border-color-005 flex flex-row items-center p-4 relative mb-2'>
							<img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-3'>
							<div class='text-gray-600 mr-5 mt-1' style='font-size:0.92rem;'>
								You edited <a href='/activity/<%= action.activity._id %>'><%= action.activity.name %></a>
							</div>
							<p class='m-0 absolute top-0 mt-2 right-0 text-xs quicksand text-gray-600 mr-2'><%= getDateString(action.created_at) %></p>
						</div>
					<% } %>
				<% }) %>
			</div>
		<% } else { %>

			No actions
		<% } %>
	</div>

<%- include('includes/loggedin-end.ejs') %>