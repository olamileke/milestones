<%- include('includes/loggedin-top.ejs') %>

	<div class='px-6'>
		<div class='flex flex-row mb-3'>
			<div class='h-32 w-2/6 mr-3 px-5 py-4 border-color-005 border bg-white flex flex-row justify-between items-center rounded-lg'>
				<img src="/images/auth-index/activity.svg" class='mr-3 object-cover' width='68px'>
				<div class="flex flex-col text-center">
					<p class='m-0 text-lg'><%= numActivities %></p>
					<p class='m-0 text-sm leading-5'>Activities</p>
				</div>
			</div>
			<div class='w-4/6 px-8 py-4 border-color-005 border bg-white rounded-lg flex flex-row items-center'>
				<div class='w-4/6 flex flex-col'>
					<p class='m-0 mb-3 text-md'>Milestone Completion</p>
					<p class='text-gray-600'>10/14</p>
				</div>
				<div>
					<div class='rounded-full border-8 border-color-005 p-4 relative'>
						35%
						<div class='text-transparent absolute border-8 p-4 rounded-full' style='top:-7px;left:-9px; border-color:#e6e8e6;'>
							50%
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class='my-5 text-sm font-semibold' style='font-family: "Comfortaa", sans-serif;'>
			Recent Actions
		</div>
		<div class='rounded-md'  style='font-family: "Comfortaa", sans-serif;'>
			<% actions.forEach(action => {  %>
				<% if(action.name == 'Create Activity') { %>
					<div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-2'>
						<img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-3'>
						<div class='text-gray-600 mr-5 text-sm'>
							You created a new activity <a class='underline lowercase'><%= action.activity.name %></a>
						</div>
						<p class='m-0 absolute top-0 mt-2 right-0 text-xs quicksand text-gray-600 mr-2'><%= action.created_at %></p>
					</div>
				<% } %>
			<% }) %>
		</div>
	</div>

<%- include('includes/loggedin-end.ejs') %>