<%- include('includes/loggedin-top.ejs') %>
<%- include('includes/date.ejs') %>

	<div class='lg:px-6 sm:pt-24 lg:pt-0 z-20'>
		<div class='flex flex-row items-center mb-3 p-6 sm:rounded' style="background:#f2efea;">
			<div class='w-full sm:w-4/6 mr-6 flex flex-col quicksand'>
				<p class='m-0 mb-2 baloo-bhaina' style='color:#8E5572;font-size:1rem;'>Record the process as you enhance and better yourself</p>
				<p style='color:#8E5572; font-size:0.86rem'>
					Keep track of yourself and your growth journey as you go about the never ending process of improving yourself and your processes.
				</p>
			</div>
			<div class='w-2/6 flex flex-col items-end hidden sm:block'>
				<img src="/images/auth-index/activity.svg" class='relative' width="120px" style='left:calc((100% - 120px)/2)'>
			</div>	
		</div>
		<% if(actions.length > 0) { %>
			<div class='quicksand mb-12'>
				<p class='mt-5 mb-2 text-md text-gray-700'>Recent actions</p>
				<% actions.forEach(action => {  %>
                    <% if(action.name == 'Create Activity') { %>
                        <div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-10'>
                            <img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-3'>
                            <div class='text-gray-700 sm:text-gray-700 mt-1' style='font-size:0.94em;'>
                                <p class='m-0'>new activity created.<a href='/activity/<%= action.activity._id %>'>"<%= action.activity.name.toLowerCase() %>"</a></p>
                            </div>
                            <p class='absolute m-0 bottom-0 mt-2 right-0 text-sm quicksand text-gray-700' style='bottom:-30px;'><%= getDateString(action.created_at) %></p>
                        </div>
                    <% } %>
                    <% if(action.name == 'Create Milestone') { %>
                        <div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-10'>
                            <img src="<%= action.milestone.imageUrl %>" class='rounded object-cover w-8 h-8 mr-4'>
                            <div class='text-gray-700 sm:text-gray-700 mt-1' style='font-size:0.94em;'>
                                <p class='m-0'>milestone achieved in <a href='/activity/<%= action.milestone.activityId %>'><%= action.milestone.activityName.toLowerCase()%>.</a> "<%= action.milestone.description.slice(0,25).toLowerCase() %>..."</p>
                            </div>
                            <p class='absolute m-0 right-0 text-sm quicksand text-gray-700 mr-2' style='bottom:-29px;'><%= getDateString(action.created_at) %></p>
                        </div>
                    <% } %>
                    <% if(action.name == 'Edit Activity') { %>
                        <div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-10'>
                            <img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-4'>
                            <div class='text-gray-700 sm:text-gray-700 mt-1' style='font-size:0.94em;'>
                                <p class='m-0'>activity edited.<a href='/activity/<%= action.activity._id %>'>"<%= action.activity.name.toLowerCase()%>"</a></p>
                            </div>
                            <p class='absolute m-0 right-0 text-sm quicksand text-gray-700 mr-2' style='bottom:-30px;'><%= getDateString(action.created_at) %></p>
                        </div>
                    <% } %>
                    <% if(action.name == 'Complete Activity') { %>
                        <div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-10'>
                            <img src="<%= action.activity.imageUrl %>" class='rounded object-cover w-8 h-8 mr-4'>
                            <div class='text-gray-700 sm:text-gray-700 mt-1' style='font-size:0.94em;'>
                                <p class='m-0'>activity completed. <a href='/activity/<%= action.activity._id %>'>"<%= action.activity.name.toLowerCase()%>"</a></p>
                            </div>
                            <p class='absolute m-0 right-0 text-sm quicksand text-gray-700 mr-2' style='bottom:-30px;'><%= getDateString(action.created_at) %></p>
                        </div>
                    <% } %>
                    <% if(action.name == 'Edit Milestone') { %>
                        <div class='bg-white border border-color-005 flex flex-row items-center p-4 relative mb-10'>
                            <img src="<%= action.milestone.imageUrl %>" class='rounded object-cover w-8 h-8 mr-4'>
                            <div class='text-gray-700 sm:text-gray-700 mt-1' style='font-size:0.94em;'>
                                <p class='m-0'>milestone edited in <a href='/activity/<%= action.milestone.activityId %>'><%= action.milestone.activityName.toLowerCase() %>.</a> "<%= action.milestone.description.slice(0,25).toLowerCase() %>..."</p>
                            </div>
                            <p class='absolute m-0 right-0 text-sm quicksand text-gray-700 mr-2' style='bottom:-30px;'><%= getDateString(action.created_at) %></p>
                        </div>
                    <% } %>
				<% }) %>
			</div>
		<% } else { %>

			<p class='m-0 mt-4 text-md text-gray-700'>No recent actions</p>
		<% } %>
	</div>

<%- include('includes/loggedin-end.ejs') %>