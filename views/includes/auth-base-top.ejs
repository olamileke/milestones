<html>
	<head>
		<title><%= pageTitle %></title>
		<%- include('./styles.ejs') %>
		<link rel="stylesheet" type="text/css" href="/css/auth/auth.css">
	</head>
	<body>
		<div class='w-screen h-screen px-5 bsm:px-0 md:px-10 xl:px-0 flex justify-center items-center quicksand' style='background-color:#FBFBFB;'>
            <div class='w-full absolute top-0 left-0 py-8 px-5 sm:px-8 lg:pr-12 bsm:pl-12 lg:pl-8 flex justify-between quicksand'>
                <div class='font-bold text-md relative' style="top:1px">
                    <a href='/'>milestones</a>
                </div>
            </div>

            <div class='grid grid-cols-12 h-full w-full'>
				<div class='hidden bsm:flex xl:col-start-2 col-start-1 col-end-7 flex-col justify-center'>
					<img src="/images/auth/finish-line.svg" alt='finish-line'>
				</div>
				<div class='col-start-1 col-end-13 bsm:col-start-3 bsm:col-end-11 lg:col-start-8 md:col-end-13 xl:col-end-11 md:pl-8 xl:pl-0 col-end-11 flex flex-col justify-center'>
				<% if(notification) { %>
					<div class='alert alert-<%= notification.class %>'>
						<i class="fa fa-<%= notification.class === 'danger' ? 'exclamation-circle' : 'check-circle' %>"></i> <%= notification.message %>
					</div>
				<% } %>