
<%- include('../includes/confirm-reset-top.ejs') %>
	
	<form action='/password/reset/<%= token %>?_csrf=<%= csrfToken %>' method='POST' class='relative quicksand rounded-md border border-color-005 baloo-bhaina p-6 flex flex-col'>
		<p class='m-0 mb-3'>Enter your new password</p>
		<input type="password" name="password" class="focus:outline-none py-3 px-4 border border-color-005 bg-transparent">
		<i class='fa fa-unlock password__icon cursor-pointer invisible absolute top-0 right-0 mr-8 text-gray-800' style='top:78px;right:4px;'></i>
		<input type="text" name="userId" class='hidden' value='<%= userId %>'>
		<div class='mt-4'>
			<button type='submit' class='text-white p-2 pb-1 rounded bg-palette-300 active:bg-palette-400 sm:rounded-md active:outline-none focus:outline-none'>reset</button>
		</div>
	</form>

