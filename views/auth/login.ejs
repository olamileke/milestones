<%- include('../includes/auth-base-top.ejs') %>

<form class='p-6 border border-solid' action='/login' method='POST'>
	<div class='mb-3 flex flex-col'>
		<p class="text-gray-600 mb-2 text-sm">email</p>
		<input type="email" name="email" value="<%= oldInput.email %>" class='focus:outline-none text-gray-600 p-3 w-full' id='email'>
	</div>
	<div class='mb-5 flex flex-col relative'>
		<p class="text-gray-600 mb-2 text-sm">password</p>
		<input type="password" name="password" value="<%= oldInput.password %>" class='focus:outline-none text-gray-600 p-3 w-full' id='password'>
		<i class='fa fa-unlock password__icon cursor-pointer invisible absolute top-0 right-0 mr-3 text-gray-800' style='top:45px;'></i>
	</div>
	<div class='text-right mb-3'>
		<button type='submit' class='text-white p-2 rounded bg-palette-300 active:bg-palette-400 sm:rounded-md active:outline-none focus:outline-none'>login</button>
	</div>
	<div class='text-right mb-3 flex flex-col'>
		<a href="/signup" class='text-gray-600 mb-2'>new account</a>
		<a href="/confirm/email" class='text-gray-600'>forgot password</a>
	</div>
	<input type="hidden" id='auth-action' value='login'>
	<input type="hidden" name="_csrf" value="<%= csrfToken %>">
</form>

<%- include('../includes/auth-base-end.ejs') %>
