<%- include('includes/loggedin-top.ejs') %>
	
	<div class='w-full lg:w-5/6 self-center pt-12 sm:pt-24 lg:pt-0 z-30'>
		<div class='mb-2 bg-white border border-color-005 flex flex-col justify-center text-gray-600 sm:rounded-lg px-4 h-24'>
			<p class='m-0 mb-3'>download activity information</p>
			<p class='m-0 text-sm'>* pdf format</p>
		</div>

		<form class='bg-white p-6 border border-color-005 sm:rounded-lg'>
			<div class='flex flex-col mb-5'>
				<p class='m-0 mb-3 text-gray-600 text-sm sm:text-md'>name(optional)</p>
				<input type="text" name='name' class='capitalize focus:outline-none py-3 px-4 border border-color-005'>
			</div>
			<div class='flex flex-col mb-3'>
				<p class='m-0 mb-3 text-gray-600 text-sm sm:text-md'>activity</p>
				<select class='focus:outline-none py-3 px-4 border border-color-005 text-black text-gray-700'>
					<% activities.forEach(activity => { %>
						<option value="<%= activity._id %>"><%= activity.name %></option>
					<% }) %>
				</select>
			</div>
			<div class='flex flex-row justify-end'>
				<button type='submit' class='transition-colors ease-in duration-500 focus:outline-none border-2 border-white text-sm p-2 rounded-md text-white bg-palette-200 font-semibold'>Download</button>
			</div>
		</form>
	</div>

<%- include('includes/loggedin-end.ejs') %>
